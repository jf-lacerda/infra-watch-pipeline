{
  "dashboard": {
    "id": null,
    "uid": null,
    "title": "Monitoramento Prometheus - Básico",
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "type": "stat",
        "title": "Status da Aplicação",
        "targets": [
          {
            "expr": "up",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "green", "value": 1 }
              ]
            },
            "mappings": [
              { "value": 1, "text": "Online" },
              { "value": 0, "text": "Offline" }
            ]
          },
          "overrides": []
        },
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 }
      },
      {
        "type": "timeseries",
        "title": "Duração da Coleta (scrape_duration_seconds)",
        "targets": [
          {
            "expr": "scrape_duration_seconds",
            "refId": "A"
          }
        ],
        "gridPos": { "x": 6, "y": 0, "w": 12, "h": 8 }
      },
      {
        "type": "stat",
        "title": "Intervalo da Coleta (scrape_interval_seconds)",
        "targets": [
          {
            "expr": "scrape_interval_seconds",
            "refId": "A"
          }
        ],
        "gridPos": { "x": 0, "y": 4, "w": 6, "h": 4 }
      },
      {
        "type": "timeseries",
        "title": "Séries Ativas (prometheus_tsdb_head_series)",
        "targets": [
          {
            "expr": "prometheus_tsdb_head_series",
            "refId": "A"
          }
        ],
        "gridPos": { "x": 6, "y": 8, "w": 12, "h": 8 }
      }
    ]
  },
  "overwrite": true
}
